{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowJs": false,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "target": "es6",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "distribution/**/*"
    ],
    "exclude": ["./subgraph"]
}
